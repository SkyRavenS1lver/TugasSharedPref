<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgphoto"
    tools:context=".CariBerita"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/bghp"
        android:layout_margin="30dp"
        >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Cari Berita"
        android:textColor="@color/purple_500"
        android:textAlignment="center"
        android:layout_marginTop="50dp"
        android:textSize="40sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="25dp"
        android:padding="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:editable="false"
            android:background="@android:color/transparent"
            android:text="Tanggal Lahir:"
            android:textColor="@color/purple_500"
            android:textSize="20sp"
            tools:ignore="Deprecated,TextFields"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bglain"
            android:layout_weight="1"
            android:orientation="vertical">
            <EditText
                android:textColor="@color/purple_500"
                android:id="@+id/Date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:editable="false"
                android:hint="Tanggal Lahir"
                android:background="@android:color/transparent"
                android:inputType="none"
                android:padding="3dp"
                android:paddingStart="5dp"
                android:textSize="20sp"
                tools:ignore="Deprecated,TextFields" />
        </LinearLayout>
    </LinearLayout>
        <LinearLayout
            android:id="@+id/UMR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:padding="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:editable="false"
                android:background="@android:color/transparent"
                android:text="Umur Anda:"
                android:textColor="@color/purple_500"
                android:textSize="20sp"
                tools:ignore="Deprecated,TextFields"
                android:layout_weight="1"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bglain"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:textColor="@color/purple_500"
                    android:id="@+id/Umur"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Umur Anda"
                    android:background="@android:color/transparent"
                    android:padding="3dp"
                    android:paddingStart="5dp"
                    android:textSize="20sp"
                    tools:ignore="Deprecated,TextFields" />
            </LinearLayout>
        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/elemenY"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="@dimen/elemenX"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="Pilih preferensi Berita:"
            android:textColor="@color/purple_500"
            android:paddingStart="@dimen/padText"
            android:paddingTop="@dimen/padText"
            android:paddingBottom="@dimen/padText"
            android:textSize="20sp"
            tools:ignore="Deprecated,TextFields" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/elemenY"
        android:layout_marginLeft="@dimen/elemenX"
        android:layout_marginRight="@dimen/elemenX"
        android:background="@drawable/bg_et"
        android:orientation="vertical">
        <Spinner
            android:textColor="@color/purple_500"
            android:id="@+id/Status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/padText"
            android:paddingTop="@dimen/padText"
            android:paddingBottom="@dimen/padText"
            android:spinnerMode="dropdown"
            android:popupBackground="@drawable/bg_popup"
            android:dropDownVerticalOffset="65dp"
            />
    </LinearLayout>
    <Button
        android:id="@+id/cari"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/elemenY"
        android:layout_marginLeft="@dimen/elemenX"
        android:layout_marginRight="@dimen/elemenX"
        android:text="cari"
        android:textSize="20sp"
        />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/Logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"


            android:backgroundTint="@color/white"
            android:src="@drawable/ic_baseline_power_settings_new_24"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:maxImageSize="50dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>